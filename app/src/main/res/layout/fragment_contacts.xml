<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <include
                layout="@layout/view_cur_searchbar_layout"/>

            <include
                layout="@layout/view_input_searchbar_layout"/>

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ListView
            android:id="@+id/lv_contacts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

        </ListView>

        <com.example.huifeng.library.custom_widget.SectionBar
            android:id="@+id/sb_index"
            android:layout_width="33dp"
            android:layout_height="400dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/tv_select_letters"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:background="@color/common_color_c13_ececec"
            android:text="A"
            android:visibility="gone"
            android:textSize="@dimen/common_dimen_dp20"
            android:gravity="center"
            android:textColor="@color/common_color_c1_0971ce"/>

    </RelativeLayout>

</LinearLayout>
