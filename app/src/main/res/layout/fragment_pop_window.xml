<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_bg"
    android:layout_width="match_parent"
    android:background="@color/common_color_c5_ffffff"
    android:clickable="true"
    android:layout_height="match_parent"
    tools:ignore="KeyboardInaccessibleWidget">

    <Button
        android:id="@+id/btn_center_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:background="@color/common_color_c1_0971ce"
        android:text="向右弹出"
        android:textColor="@color/common_color_c5_ffffff"/>

    <Button
        android:id="@+id/btn_center_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="170dp"
        android:layout_alignParentRight="true"
        android:background="@color/common_color_c1_0971ce"
        android:text="向左弹出"
        android:textColor="@color/common_color_c5_ffffff"/>



    <Button
        android:id="@+id/btn_center_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/common_color_c1_0971ce"
        android:text="全屏弹出"
        android:textColor="@color/common_color_c5_ffffff"/>


</RelativeLayout>
