<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/common_color_c5_ffffff"
    android:clickable="true"
    android:layout_height="match_parent"
    tools:ignore="KeyboardInaccessibleWidget">

    <ImageView
        android:id="@+id/iv_pic"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="@mipmap/iv_pic"
        android:scaleType="centerCrop"
        android:transitionName="@string/transName"
        tools:ignore="ContentDescription,UnusedAttribute"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_pic"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Android Shared Elements"
        android:textColor="@color/common_color_c6_000000"/>

</RelativeLayout>
