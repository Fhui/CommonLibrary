<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_color_c5_ffffff"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_head_index"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/common_color_c13_ececec"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:text="A"
            android:textColor="@color/common_color_c1_0971ce"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@color/common_color_c5_ffffff"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_person_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:text="张三"
                    android:textColor="@color/common_color_c7_333333"
                    android:textSize="@dimen/common_dimen_s6_dp16"/>

                <TextView
                    android:id="@+id/tv_person_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/tv_person_name"
                    android:layout_below="@id/tv_person_name"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="7dp"
                    android:text="18888888888"
                    android:textColor="@color/common_color_c9_999999"
                    android:textSize="@dimen/common_dimen_s7_dp14"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
